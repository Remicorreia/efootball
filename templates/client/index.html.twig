{% extends 'base.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
	<h1>Client index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Pseudo</th>
				<th>Roles</th>
				<th>Email</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Civilite</th>
				<th>Ville</th>
				<th>CodePostale</th>
				<th>Adresse</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for client in clients %}
				<tr>
					<td>{{ client.id }}</td>
					<td>{{ client.username }}</td>
					<td>
						{% for role in client.roles %}
							{{ role }}<br>
						{% endfor %}
					</td>
					<td>{{ client.email }}</td>
					<td>{{ client.nom }}</td>
					<td>{{ client.prenom }}</td>
					<td>{{ client.civilite }}</td>
					<td>{{ client.ville }}</td>
					<td>{{ client.codePostale }}</td>
					<td>{{ client.adresse }}</td>
					<td>
						<a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
						<a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
