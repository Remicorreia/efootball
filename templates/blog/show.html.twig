{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
        <tr>
                <th>Photo</th>
                {# <td>{{ blog.photo }}</td> #}
                <td><img width="100" src="{{ asset("images/" ~ blog.photo ) }}" alt="{{ blog.titre }}"></td>

            </tr>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.publie }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.activ }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ blog.miseAJour }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ blog.fichier }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}">back to list</a>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
